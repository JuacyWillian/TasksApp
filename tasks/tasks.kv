#:kivy 1.10.1
#:import NavigationLayout kivymd.navigationdrawer
#:import MDNavigationDrawer kivymd.navigationdrawer
#:import NavigationDrawerIconButton kivymd.navigationdrawer

#:import NavigationDrawerHeader tasks.components
#:import toolbar tasks.components.toolbar
#:import SplashScreen tasks.screens
#:import HomeScreen tasks.screens
# :import TaskEditScreen tasks.screens

<SplashScreen>:
    # background_color:
    # logo:

NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: drawer

        NavigationDrawerHeader:
            title: app.get_application_name()

        NavigationDrawerIconButton:
            icon: 'home'
            text: 'Home'
            on_release: manager.current = 'home'
    BoxLayout:
        orientation: 'vertical'
        toolbar:
            title: app.get_application_name()
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [['menu', lambda *x: nav_layout.toggle_nav_drawer()]]
        ScreenManager:
            id: manager
            SplashScreen:
                name: 'splash'
            HomeScreen:
                name: 'home'
